<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nfcvcard" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        android:configChanges="orientation"
        android:screenOrientation="portrait">
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/com.nfcvcard" />
                <data android:mimeType="image/*" />
                <data android:mimeType="text/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="vnd.android.nfc"
                    android:host="ext"
                    android:pathPrefix="/android.com:pkg"/>
                <data android:mimeType="application/com.nfcvcard" />
                <data android:mimeType="image/*" />
                <data android:mimeType="text/*" />
            </intent-filter>

        </activity>

    </application>
<uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"></uses-permission>
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
<uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"></uses-permission>
<uses-permission android:name="android.permission.NFC" />
    <uses-sdk android:minSdkVersion="16"></uses-sdk>

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />
</manifest>
